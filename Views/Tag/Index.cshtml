@model List<Tag>

<div class="mb-5">
    <a class="btn btn-danger btn-sm" asp-area="" asp-controller="Tag" asp-action="Create">Inserisci</a>
</div>
@if (Model.Count() == 0)
{
    <h3 class="text-center">Non sono presenti Ingredienti.</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>nome</th>
                <th>info</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Tag tag in Model)
            {
                <tr>

                   
                    <td class="title">@tag.Title</td>
                    <td>
                        @*Elimina Ingrediente*@
                        <form asp-controller="Tag" asp-action="Delete" asp-route-id="@tag.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">
                                Elimina
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
