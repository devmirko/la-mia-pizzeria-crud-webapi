

@model List<Pizza>

@if (Model.Count() == 0)
{
    <h3 class="text-center">Non sono presenti Pizze.</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>foto</th>
                <th>nome</th>
                <th>Descrizione</th>
                <th>Categoria</th>
                <th>info</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pizza pizza in Model)
            {
                <tr>
                   
                    <td class="image">
                        <img class="post-list-image" src="@pizza.Image">
                    </td>
                    <td class="title">@pizza.Name</td>
                    <td class="description">
                        @pizza.Description
                    </td>
                    <td class="category">
                        @pizza.Category.Title
                    </td>
                    <td>
                        @*visualizza pizza*@
                        <a class="btn btn-info btn-sm" href="@Url.Action("Detail", "Pizza", new {id = pizza.Id})">info</a>
                        @*modifica pizza*@
                        <a class="btn btn-warning btn-sm" href="@Url.Action("Update", "Pizza", new {id = pizza.Id})">Modifica</a>
                        @*Elimina pizza*@
                        <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">
                               Elimina
                            </button>
                        </form>
                     </td>
                </tr>
            }
        </tbody>
    </table>

}

